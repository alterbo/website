{% macro collectionArticle(category, date, locale, title, thumb, url, description) %}
    <article class="grid grid-rows-lol md:gap-10 md:grid-cols-lol md:grid-rows-nonlol mb-10 md:mb-7">
        <div class="border-2 border-double border-slate-200 flex justify-center p-4 w-full dark:border-slate-700">
            <div class="relative w-full">
                <picture>
                    <source
                        type="image/webp"
                        srcset="./../../../{{ thumb.url }}.webp"
                    >
                    <source
                        type="image/jpeg"
                        srcset="./../../../{{ thumb.url }}.jpg"
                    >
                    <img
                        alt="{{ thumb.text }}"
                        class="absolute h-full left-1/2 transform -translate-x-1/2"
                        loading="lazy"
                        src="./../../../{{ thumb.url }}.jpg"
                    >
                </picture>
            </div>
        </div>
        <div>
            <h2 class="border-b-2 border-slate-200 hover:border-slate-400 inline-block mb-1 mt-3 pb-1 text-3xl dark:border-slate-700 dark:hover:border-slate-600">
                <a class="font-primary linkon dark:text-slate-100" href="{{ url }}">{{ title }}</a>
            </h2>
            <p class="p-0 my-2 dark:text-slate-200">{{ description }}</p>
            <p class="p-0 my-2 dark:text-slate-200">{{ category }}, <time datetime="{{ date }}">{{ date | asPostDate(locale) }}</time></p>
        </div>
    </article>
{% endmacro %}

