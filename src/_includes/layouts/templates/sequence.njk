{% extends 'layouts/base/base.njk' %}

{% from 'layouts/components/macros.njk' import itemFooter, itemTitle %}

{% block nav %}
    <div class="flex justify-between p-4" id="nav">
        {% include 'layouts/components/home-button.njk' %}
        {% include 'layouts/components/menu-button.njk' %}
    </div>
{% endblock %}

{% block main %}
    <article>
        {% if imageName !== undefined %}
            
        {% endif %}
        {{ itemTitle(title) }}
        <section class="border-2 border-double border-slate-200 grid grid-flow-row h-full items-center justify-center m-4">
            <div class="h-[30vh]">
                {{ content | safe }}
            </div>
            <div class="flex justify-center p-7">
                <a class="border border-slate-400 m-3 p-3 text-center text-xl" id="startButton" href="./1"/>
                    {{ 'Go' if locale === 'en' else 'Entrar' }}
                </a>
            </div>
        </section>
        {{ itemFooter(date, locale) }}
    </article>
{% endblock %}

{% set togglenavjs %}
    {% include "js/toggle-nav.js" %}
{% endset %}
<script>
    {{ togglenavjs | jsmin | safe }}
</script>
