{% extends 'layouts/base/base.njk' %}

{% from 'layouts/components/macros.njk' import itemCast, itemFooter, itemSubtitle, itemTitle %}

{% block nav %}
    <div class="flex justify-between p-4" id="nav">
        {% include 'layouts/components/home-button.njk' %}
        {% include 'layouts/components/menu-button.njk' %}
    </div>
{% endblock %}

{% block main %}
    <article>
        {{ itemTitle(title) }}
        {{ itemSubtitle(subtitle) }}
        {% if cast %}
            <section class="max-w-screen-xl mx-auto px-4">
                {{ itemCast(cast) }}
            </section>
        {% endif %}
        <section class="border-2 border-double border-slate-200 grid grid-flow-row h-full items-center justify-center m-4">
            <div class="h-[30vh]">
                {{ content | safe }}
            </div>
            <div class="flex justify-center p-7">
                <a class="border border-slate-400 m-3 p-3 text-center text-xl" id="start-button"/>
                    {{ 'Go' if locale === 'en' else 'Entrar' }}
                </a>
            </div>
        </section>
        {{ itemFooter(date, locale) }}
    </article>

    <script src="/js/sequence-params.js"></script>

{% endblock %}

<script src="/js/toggle-nav.js"></script>
