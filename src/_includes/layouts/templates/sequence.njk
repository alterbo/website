{% extends 'layouts/base/base.njk' %}

{% block nav %}
    <div class="flex justify-between p-4" id="nav">
        {% include 'layouts/components/home-button.njk' %}
        {% include 'layouts/components/menu-button.njk' %}
    </div>
{% endblock %}

{% block main %}
    <article class="flex flex-1 flex-col justify-between p-3">
        {% if imageName !== undefined %}
            
        {% endif %}
        <h1 class="font-serif text-4xl p-4">
            {{ title }}
        </h1>
        <section class="flex flex-1 h-full items-center justify-center m-4">
            {{ content | safe }}
            <a class="border border-slate-400 m-3 ml-auto p-3 text-center text-xl" id="startButton" href="./1"/>
                {{ 'Go' if locale === 'en' else 'Entrar' }}
            </a>
        </section>
        <footer class="p-4">
            <p class="font-serif">
                {{ 'Created on' if locale == 'en' else 'Creado el' }}
                <time datetime="{{ date }}">{{ date | asPostDate(locale) }}</time>
                {{ 'by' if locale === 'en' else 'por' }} Alberto Ferrero.
            </p>
        </footer>
    </article>
{% endblock %}

{% set togglenavjs %}
    {% include "js/toggle-nav.js" %}
{% endset %}
<script>
    {{ togglenavjs | jsmin | safe }}
</script>
