{% extends 'layouts/base/base.njk' %}

{% from 'layouts/components/macros.njk' import itemCast, itemFooter, itemTitle, itemSubtitle %}

{% block header %}
    <div class="flex justify-center">
        {% include 'layouts/components/home-button.njk' %}
    </div>
{% endblock %}

{% block main %}
    <article class="mb-20 mt-10">
        <div class="gap-10 grid *:gap-3 *:grid xs:*:gap-10">
            <div class="gap-10 grid justify-start pl-7 text-slate-800 xs:pl-10 dark:text-slate-200">
                {{ itemTitle(title) }}
                {{ itemSubtitle(subtitle) }}
            </div>
            <aside class="grid-cols-[2rem_1fr] xs:grid-cols-[1fr_2fr]">
                <hr />
                <div class="gap-10 grid">
                    <div class="mt-3 xs:mt-10">
                        {{ itemCast(cast) }}
                    </div>
                    <div class="gap-7 grid grid-cols-[auto_1fr] items-end">
                        <a
                            id="start-button"
                            class="px-7 py-3 text-xl"
                            href="1/"
                            aria-label="{{ 'Start story' if locale === 'en' else 'Comenzar historia' }}"
                        >
                            {{ 'sequence.enter' | t(locale) }}
                        </a>
                        <hr />
                    </div>
                    {{ itemFooter(date, locale) }}
                </div>
            </aside>
            <div class="grid-cols-[2rem_1fr] xs:grid-cols-[1fr_4fr]">
                <hr />
                <svg viewBox="0 0 800 200" class="py-3 w-full h-auto vector xs:py-10" role="img" aria-label="{{ item.data.title }}">
                    <rect class="solid" width="800" height="200" fill="currentColor"></rect>
                    <g>
                        {% if path %}
                            <path class="shape solid" d="{{ path }}" />
                        {% else %}
                            <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" font-size="42" fill="currentColor">{{ title }}</text>
                        {% endif %}
                    </g>
                </svg>
            </div>
        </div>
    </article>
    {% include 'layouts/components/related-items.njk' %}
    {% include 'layouts/components/footer.njk' %}
{% endblock %}