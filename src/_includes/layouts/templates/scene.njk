{% extends 'layouts/base/base.njk' %}

{% block nav %}
    <div class="flex fixed items-center justify-between p-4 top-0 w-full dark:bg-[#232323]" id="nav">
        <h1 class=" font-serif text-xl text-slate-800 dark:text-slate-200 lg:text-3xl">{{ title }}</h1>
        {% include 'layouts/components/close-button.njk' %}
    </div>
{% endblock %}

{% block main %}

    {% set css %} {% include "css/scene.css" %} {% endset %}
    <style>
        {{ css | cssmin | safe }}
    </style>

    <div class="grid">
        <scene-viewer
            class="flex flex-col items-center justify-end min-h-full-moon pb-16 px-3 relative text-lg top-0 w-auto dark:bg-[#ededed] md:text-2xl lg:pb-24"
            animation="{{ animation }}"
        >
            {{ content | safe }}
        </scene-viewer>
        <div
            id="controls"
            length="{{ length }}"
            class="bottom-0 fixed flex group justify-between pb-3 px-3 w-full"
        >
            <a id="prev-button" aria-label="Previous" class="border border-slate-400 brutton font-bold font-serif m-2 p-3 text-4xl dark:bg-[#232323] dark:border-slate-600">
                <span class="border-b-2 border-transparent text-slate-800 dark:text-slate-200 hover:border-slate-200 dark:hover:border-slate-600">&larr;</span>
            </a>
            <a id="next-button" aria-label="Next" class="border border-slate-400 brutton font-bold font-serif m-2 p-3 text-4xl dark:bg-[#232323] dark:border-slate-600">
                <span class="border-b-2 border-transparent text-slate-800 dark:text-slate-200 hover:border-slate-200 dark:hover:border-slate-600">&rarr;</span>
            </a>
        </div>
    </div>

    {% set sliderjs %} {% include "js/scene-slider.js" %} {% endset %}
    <script>
        {{ sliderjs | jsmin | safe }}
    </script>

    {% set viewerjs %} {% include "js/scene-viewer.js" %} {% endset %}
    <script>
        {{ viewerjs | jsmin | safe }}
    </script>

{% endblock %}

{% set navjs %} {% include "js/toggle-nav.js" %} {% endset %}
<script>
    {{ navjs | jsmin | safe }}
</script>
